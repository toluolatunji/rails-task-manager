<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <div class="link">
        <%= link_to task.title, task_path(task)%>
          <%= link_to task_path(task),
            data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </div>
      </li>
  <% end %>
</ul>
<div class="link">
  <%= link_to "Add new task", new_task_path %>
</div>
